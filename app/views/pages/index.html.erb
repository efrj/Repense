<div class="row">
    <div class="col-md-12">
        <hr>
        <div class="jumbotron">
            <h1>Saudações da Repense</h1>
            <p>No momento temos <%=@students_total%> alunos cadastrados.</p>
            <p><%=link_to "Conheça-nos", sobre_path, class: "btn btn-primary btn-lg", role: "button"%></p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <img src="http://lorempixel.com/image_output/business-q-c-640-480-6.jpg" class="img-responsive" alt="Image">
    </div>
    <div class="col-md-6">
        <h1><span class="fa fa-file"></span> Cursos Disponíveis</h1>
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <% @courses.each do |c| %>
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="heading<%=c.id%>">
                    <h4 class="panel-title">
                        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=c.id%>" aria-expanded="false" aria-controls="collapse<%=c.id%>">
                            <span class="fa fa-caret-right"></span> <%=c.name%>
                        </a>
                    </h4>
                </div>
                <div id="collapse<%=c.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%=c.id%>">
                    <div class="panel-body">
                        <%=c.description%>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>