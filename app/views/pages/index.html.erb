<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @courses.each do |c| %>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="heading<%=c.id%>">
            <h4 class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=c.id%>" aria-expanded="false" aria-controls="collapse<%=c.id%>">
                    <%=c.name%>
                </a>
            </h4>
        </div>
        <div id="collapse<%=c.id%>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading<%=c.id%>">
            <div class="panel-body">
                <%=c.description%>
            </div>
        </div>
    </div>
    <% end %>
</div>